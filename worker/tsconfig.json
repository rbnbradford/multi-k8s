{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"es2019",
			"esnext.asynciterable"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"pretty": true,
		"sourceMap": true,
		"outDir": "./build",
		"allowJs": true,
		"noEmit": false,
		"strictNullChecks": true
	},
	"include": [
		"./src/**/*",
		"node_modules/decimal.js/decimal.global.d.ts"
	],
	"exclude": [
		"node_modules",
		"tests"
	]
}
